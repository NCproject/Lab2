<!-- Sign in response -->
<envelope>
	<header>
		<action>
			SIGN
		</action>		
	</header>
	<body>		
		<access>
			allow / deny
		</access>
	</body>
</envelope>

<!-- Show filters response -->
<envelope>
	<header>
		<action>
			SHOW_FILTERS
		</action>		
	</header>
	<body>	
		<faculties>
			<faculty>
				<id>
					facultyId
				</id>
				<name>
					facultyName
				</name>
				<groups>
					<group>
						<id>
							groupId
						</id>
						<number>
							groupNumber
						</number>
					</group>
				</groups>
			</faculty>
		</faculties>
	</body>
</envelope>

<!-- Search students response -->
<envelope>
	<header>
		<action>
			SEARCH_STUDENTS
		</action>		
	</header>
	<body>	
		<students>
			<student>
				<id>
					studentId
				</id>
				<firstName>
					firstName
				</firstName>
				<lastName>
					lastName
				</lastName>
				<enrolledDate>
					enrolledDate
				</enrolledDate>
				<group>
					groupId
				</group>
				<faculty>
					facultyId
				</faculty>
			</student>
		</students>
	</body>
</envelope>

<!-- Add student/group/faculty response -->
<envelope>
	<header>
		<action>
			ADD_STUDENT || ADD_GROUP || ADD_FACULTY
		</action>		
	</header>
	<body>	
		<!-- in case of successful adding -->		
		<id>
			studentId || groupId || facultyId
		</id>
		<!-- in case of exception -->
		<stackTrace>
			exceptMessage
		</stackTrace>
	</body>
</envelope>

<!-- Change student/group/faculty response -->
<envelope>
	<header>
		<action>
			CHANGE_STUDENT || CHANGE_GROUP || CHANGE_FACULTY
		</action>		
	</header>
	<body>			
		<status>
			Success || Exception
		</status>
		<!-- in case of exception -->
		<stackTrace>
			exceptMessage
		</stackTrace>
	</body>
</envelope>

<!-- Remove student/group/faculty response -->
<envelope>
	<header>
		<action>
			REMOVE_STUDENT || REMOVE_GROUP || REMOVE_FACULTY
		</action>		
	</header>
	<body>			
		<status>
			Success || Exception
		</status>
		<!-- in case of exception -->
		<stackTrace>
			exceptMessage
		</stackTrace>	
	</body>
</envelope>